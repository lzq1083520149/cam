<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_media"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#fafafa"
    android:orientation="horizontal" >

  <LinearLayout
      android:id="@+id/menu"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_alignParentBottom="true"
      >
    
    <TextView
	android:id="@+id/picture_menu"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/ic_stub"
	android:text="@string/media_picture"
	android:layout_weight="1"
	android:gravity="center"
	android:textColor="#000000"
	android:textSize="@dimen/media_menu_size" />
    
    <TextView
	android:id="@+id/video_menu"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/ic_stub"
	android:text="@string/media_video"
	android:textColor="#000000"
	android:layout_weight="1"
	android:gravity="center"
	android:textSize="@dimen/media_menu_size" />
    
  </LinearLayout>
  <RelativeLayout
      android:id="@+id/able"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_gravity="center"
      android:layout_above="@id/menu"
      android:layout_marginTop="@dimen/media_layout_margin"
      android:layout_marginRight="@dimen/media_layout_margin" >
    
    <!-- <include layout="@layout/fragment_item_media"/> -->
  </RelativeLayout>
</RelativeLayout>
