<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="InfomationText">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <!--
        style name="InputUI" parent="android:Theme.Wallpaper.NoTitleBar" 这个style可以解锁
         Dialog 不可以解锁，但从UI上看Dialog更合适
    -->
    <style name="InputUI" parent="android:Theme.Dialog"></style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="tab_rb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">#6e6e6e</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="progrss_dialogg" parent="android:style/Theme.Dialog">
      <item name="android:windowFrame">@null</item>
      <item name="android:windowNoTitle">true</item>
      <item name="android:background">#00000000</item>
      <item name="android:windowBackground">@android:color/transparent</item> <!-- @drawable/pbg -->
      <item name="android:windowIsFloating">true</item>
      <item name="android:windowContentOverlay">@null</item>
    </style>

	<style name="MediaController_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_dark</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@drawable/scrubber_control_selector_holo</item>
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="MediaController_Text">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="storageTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>


    <style name="holo_activity_for_fragment" parent="android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!--去除ActionBar的蓝色线条-->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@android:color/transparent</item>
    </style>



    <style name="image_view_preview">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:layout_marginBottom">10.0dip</item>
    </style>

    <style name="top_bar_bg">
        <item name="android:background">@color/top_bar_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0dip</item>
    </style>

    <style name="top_bar_title_txt">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">3.0dip</item>
        <item name="android:layout_marginRight">3.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="bottom_menu">
        <item name="android:background">@color/bottom_menu_bg</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40.0dip</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="tabbar_2btn_style" parent="@style/tabbar_btn_style">
        <item name="android:paddingLeft">42dp</item>
        <item name="android:paddingRight">42dp</item>
    </style>

    <style name="tabbar_btn_style">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textColor">@color/top_bar_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="tabbar_3btn_style" parent="@style/tabbar_btn_style">
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
    </style>

    <style name="tabbar_2btn_4word_style" parent="@style/tabbar_btn_style">
        <item name="android:paddingLeft">28.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
    </style>

    <style name="sub_menu">
        <item name="android:gravity">center</item>
        <item name="android:background">#b2000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45.0dip</item>
    </style>


    <!-- Robo Theme. -->
    <style name="RoboTheme" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


    <style name="PhotoEdit" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="MyTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>


</resources>
