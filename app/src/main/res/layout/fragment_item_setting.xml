<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
	android:layout_marginTop="10dp"
	android:layout_marginLeft="@dimen/layout_margin_leftandright"
        android:layout_marginRight="@dimen/layout_margin_leftandright"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sync_height"
                android:orientation="vertical" >

		<cn.ingenic.glasssync.ui.ElementView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bgcolor_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:orientation="vertical" >

		<cn.ingenic.glasssync.ui.ElementView
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sync_height"
                    android:layout_weight="1"
                    android:background="@drawable/bgcolor_default"
                    android:orientation="horizontal" />
		<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
		<cn.ingenic.glasssync.ui.ElementView
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sync_height"
                    android:layout_weight="1"
                    android:background="@drawable/bgcolor_default"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/layout_margin"
                android:orientation="vertical" >

		<cn.ingenic.glasssync.ui.ElementView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sync_height"
                    android:layout_weight="1"
                    android:background="@drawable/bgcolor_default"
                    android:orientation="horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />
		<cn.ingenic.glasssync.ui.ElementView
                    android:id="@+id/gps"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sync_height"
                    android:layout_weight="1"
                    android:background="@drawable/bgcolor_default"
                    android:orientation="horizontal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:orientation="vertical" >
		<cn.ingenic.glasssync.ui.ElementView
                    android:id="@+id/wifi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sync_height"
                    android:layout_weight="1"
                    android:background="@drawable/bgcolor_default"
                    android:orientation="horizontal" />
	    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>